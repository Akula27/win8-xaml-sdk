<Page x:Class="JsonReader.MainPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:JsonReader"
		xmlns:telerik="using:Telerik.UI.Xaml.Controls.Primitives" FontSize="16">
	<Page.Resources>
		<DataTemplate x:Key="QueryTemplate">
			<Grid>
				<TextBlock Margin="0 10" Text="{Binding Description}" />
			</Grid>
		</DataTemplate>
		<DataTemplate x:Key="MatchTemplate">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="2*" />
				</Grid.ColumnDefinitions>
				<TextBlock Text="{Binding Date}" HorizontalAlignment="Left" Grid.Column="0" />
				<TextBlock Text="{Binding HomeTeam}" HorizontalAlignment="Right" Grid.Column="1" />
				<TextBlock Text="{Binding Result}" HorizontalAlignment="Center" Grid.Column="2" />
				<TextBlock Text="{Binding AwayTeam}" HorizontalAlignment="Left" Grid.Column="3" />
			</Grid>
		</DataTemplate>
	</Page.Resources>
	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="50">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<local:ExpanderControl x:Name="queriesExpander" Header="Select a query from the list below to see the result." IsExpanded="True">
				<telerik:RadDataBoundListBox x:ConnectionId='1' x:Name="queriesListBox" ItemTemplate="{StaticResource QueryTemplate}" ItemsSource="{Binding Queries}"
						SelectedItem="{Binding SelectedQuery, Mode=TwoWay}"                                                    Margin="10"></telerik:RadDataBoundListBox>
			</local:ExpanderControl>
			<telerik:RadDataBoundListBox x:Name="matchesListBox" ItemTemplate="{StaticResource MatchTemplate}" Grid.Row="1" EmptyContent=""
					Margin="10" />
		</Grid>
		<ProgressBar x:Name="loadingProgress" HorizontalAlignment="Center" Width="300" Visibility="Collapsed" />
	</Grid>
</Page>

