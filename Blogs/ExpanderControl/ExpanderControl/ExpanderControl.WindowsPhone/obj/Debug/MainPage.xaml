<Page x:Class="ExpanderControl.MainPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:ExpanderControl"
		xmlns:telerik="using:Telerik.UI.Xaml.Controls.Primitives" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Grid>
		<Grid Margin="50">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock Text="{Binding Season}" />
			<telerik:RadDataBoundListBox x:Name="telerikListBox" ItemsSource="{Binding Teams}" Grid.Row="1">
				<telerik:RadDataBoundListBox.ItemTemplate>
					<DataTemplate>
						<local:ExpanderControl Background="#F8CBAD" Foreground="Black">
							<local:ExpanderControl.HeaderContentTemplate>
								<DataTemplate>
									<Grid VerticalAlignment="Center">
										<TextBlock FontSize="20" Text="{Binding Name}" />
									</Grid>
								</DataTemplate>
							</local:ExpanderControl.HeaderContentTemplate>
							<local:ExpanderControl.ContentTemplate>
								<DataTemplate>
									<Grid Background="#FCE4D6">
										<StackPanel>
											<TextBlock FontSize="16" Margin="10">
											<Run Text="Position: " />
											<Run Text="{Binding Position}" /></TextBlock>
											<TextBlock FontSize="16" Margin="10">
											<Run Text="Wins: " />
											<Run Text="{Binding Wins}" /></TextBlock>
											<TextBlock FontSize="16" Margin="10">
											<Run Text="Draws: " />
											<Run Text="{Binding Draws}" /></TextBlock>
											<TextBlock FontSize="16" Margin="10">
											<Run Text="Losses: " />
											<Run Text="{Binding Losses}" /></TextBlock>
											<TextBlock FontSize="16" Margin="10">
											<Run Text="Points: " />
											<Run Text="{Binding Points}" /></TextBlock>
										</StackPanel>
									</Grid>
								</DataTemplate>
							</local:ExpanderControl.ContentTemplate>
						</local:ExpanderControl>
					</DataTemplate>
				</telerik:RadDataBoundListBox.ItemTemplate>
			</telerik:RadDataBoundListBox>
		</Grid>
	</Grid>
</Page>

